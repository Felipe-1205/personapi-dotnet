@model personapi_dotnet.Models.Telefono
@model personapi_dotnet.Models.Persona

@{
    ViewData["Title"] = "Eliminar Telefono";
}

<h1>@ViewData["Title"]</h1>
<h4>¿Seguro que deseas eliminar el teléfono @Model.Numero?</h4>

<div class="card mb-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">Telefono</dt>
            <dd class="col-sm-10">@Model.Numero</dd>
            <dt class="col-sm-2">Tipo</dt>
            <dd class="col-sm-10">@Model.Tipo</dd>
            <dt class="col-sm-2">Operador</dt>
            <dd class="col-sm-10">@Model.Operador</dd>
            <dt class="col-sm-2">Persona</dt>
            <dd class="col-sm-10">@Model.Persona.Nombre @Model.Persona.Apellido</dd>
        </dl>
    </div>
</div>  

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Cc" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>  