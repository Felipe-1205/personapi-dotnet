@model personapi_dotnet.Models.Estudio

@{
    ViewData["Title"] = "Editar Estudio";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="IdProf" />
    <input type="hidden" asp-for="CcPer" />
    <div class="mb-3">
        <label asp-for="Fecha" class="form-label"></label>
        <input asp-for="Fecha" type="date" class="form-control" />
        <span asp-validation-for="Fecha" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Univer" class="form-label"></label>
        <input asp-for="Univer" class="form-control" />
        <span asp-validation-for="Univer" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar cambios</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
