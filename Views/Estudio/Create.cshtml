@model personapi_dotnet.Models.Estudio

@{
    ViewData["Title"] = "Crear Estudio";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label asp-for="IdProf" class="form-label"></label>
        <select asp-for="IdProf" asp-items="ViewBag.IdProf" class="form-select"></select>
        <span asp-validation-for="IdProf" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="CcPer" class="form-label"></label>
        <select asp-for="CcPer" asp-items="ViewBag.CcPer" class="form-select"></select>
        <span asp-validation-for="CcPer" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Fecha" class="form-label"></label>
        <input asp-for="Fecha" type="date" class="form-control" />
        <span asp-validation-for="Fecha" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Univer" class="form-label"></label>
        <input asp-for="Univer" class="form-control" />
        <span asp-validation-for="Univer" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
