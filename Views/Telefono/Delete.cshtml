@model personapi_dotnet.Models.Telefono

@{
    ViewData["Title"] = "Eliminar Teléfono";
}

<h1>@ViewData["Title"]</h1>
<h4>¿Eliminar el teléfono @Model.Num?</h4>

<dl class="row">
    <dt class="col-sm-2">Número</dt>
    <dd class="col-sm-10">@Model.Num</dd>
    <dt class="col-sm-2">Operadora</dt>
    <dd class="col-sm-10">@Model.Oper</dd>
</dl>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Num" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>
