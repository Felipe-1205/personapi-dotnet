@model personapi_dotnet.Models.Profesion

@{
    ViewData["Title"] = "Detalle de Profesión";
}

<h1>@ViewData["Title"]</h1>

<dl class="row">
    <dt class="col-sm-2">ID</dt>
    <dd class="col-sm-10">@Model.Id</dd>
    <dt class="col-sm-2">Nombre</dt>
    <dd class="col-sm-10">@Model.Nom</dd>
    <dt class="col-sm-2">Descripción</dt>
    <dd class="col-sm-10">@Model.Des</dd>
</dl>

<p>
    <a class="btn btn-secondary"
       asp-action="Index">Volver</a>
    <a class="btn btn-warning"
       asp-action="Edit"
       asp-route-id="@Model.Id">Editar</a>
</p>
