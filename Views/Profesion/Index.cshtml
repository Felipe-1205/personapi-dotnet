@model IEnumerable<personapi_dotnet.Models.Profesion>

@{
    ViewData["Title"] = "Lista de Profesiones";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Crear nueva profesión</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Nom</td>
            <td>@item.Des</td>
            <td>
                <a class="btn btn-sm btn-info"
                   asp-action="Details"
                   asp-route-id="@item.Id">Ver</a>
                <a class="btn btn-sm btn-warning"
                   asp-action="Edit"
                   asp-route-id="@item.Id">Editar</a>
                <a class="btn btn-sm btn-danger"
                   asp-action="Delete"
                   asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>
